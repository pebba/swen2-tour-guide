<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="technikum.bohrffer.swen2tourguide.controllers.TourLogAddController"
            prefHeight="400.0" prefWidth="400.0">
    <VBox spacing="10.0" alignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <VBox.margin>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </VBox.margin>
        <TextField fx:id="comment" promptText="Comment"/>
        <TextField fx:id="difficulty" promptText="Difficulty"/>
        <TextField fx:id="totalDistance" promptText="Total Distance"/>
        <TextField fx:id="totalTime" promptText="Total Time"/>
        <TextField fx:id="rating" promptText="Rating"/>
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmitButton"/>
    </VBox>
</AnchorPane>
